#!/bin/sh

set -e

case "$1" in
    configure)
        
	# older packages had ossec_agent.tcl in /etc/nsm/ossec/
	# remove if necessary
	if [ -f /etc/nsm/ossec/ossec_agent.tcl ]; then
		rm -f /etc/nsm/ossec/ossec_agent.tcl || echo "Error removing /etc/nsm/ossec/ossec_agent.tcl"
	fi

	# check to see if /etc/nsm/ossec/ossec_agent.conf exists
	# copy from template if necessary
	FILE="/etc/nsm/ossec/ossec_agent.conf"
	if [ -f $FILE ]; then
		echo "$FILE exists, leaving alone."
	else
		echo "$FILE does not exist, copying."
		TEMPLATE="/etc/nsm/templates/ossec/ossec_agent.conf"
		cp $TEMPLATE $FILE || echo "Unable to copy $TEMPLATE to $FILE"
	fi

	# restart if currently running
	if pgrep -f ossec_agent.tcl >/dev/null 2>&1 && [ -x /usr/bin/setsid ] && [ -x /usr/sbin/nsm_sensor_ps-restart ] && [ -f /etc/nsm/securityonion.conf ]; then
		/usr/bin/setsid /usr/sbin/nsm_sensor_ps-restart --only-ossec-agent || echo "Error restarting ossec_agent.tcl"
	fi

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;


    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
